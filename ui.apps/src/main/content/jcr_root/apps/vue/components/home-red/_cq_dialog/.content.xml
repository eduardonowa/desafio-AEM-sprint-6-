<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Vue - Home Red"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <header-properties jcr:primaryType="nt:unstructured"
                                  jcr:title="Header"
                                  sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <description cq-msm-lockable="./description"
                                        fieldLabel="Text Description"
                                        jcr:primaryType="nt:unstructured"
                                        name="./description"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <colorDescription cq-msm-lockable="./colorDescription"
                                             fieldLabel="Color"
                                             jcr:primaryType="nt:unstructured"
                                             name="./colorDescription"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                           <textAlignHeader cq-msm-lockable="./textAlignHeader"
                                            defaultValue="textAlignHeader"
                                            fieldLabel="Content Position:"
                                            jcr:primaryType="nt:unstructured"
                                            name="./textAlignHeader"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            value="false">
                              <items jcr:primaryType="nt:unstructured">
                                 <flex-start jcr:primaryType="nt:unstructured" text="Left" value="flex-start"/>
                                 <center jcr:primaryType="nt:unstructured" text="Center" value="center"/>
                                 <flex-end jcr:primaryType="nt:unstructured" text="Right" value="flex-end"/>
                              </items>
                           </textAlignHeader>
                           <fontFamilyDescription cq-msm-lockable="./fontFamilyDescription"
                                                  fieldLabel="Description Font Family:"
                                                  jcr:primaryType="nt:unstructured"
                                                  name="./fontFamilyDescription"
                                                  sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                  vertical="{Boolean}false">
                              <items jcr:primaryType="nt:unstructured">
                                 <Inter checked="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        name="fontFamilyDescription"
                                        text="Inter"
                                        value="Inter"/>
                                 <Arial checked="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        name="fontFamilyDescription"
                                        text="Arial"
                                        value="Arial"/>
                                 <Nunito checked="{Boolean}true"
                                         jcr:primaryType="nt:unstructured"
                                         name="fontFamilyDescription"
                                         text="Nunito"
                                         value="Nunito"/>
                              </items>
                           </fontFamilyDescription>
                           <fontSizeDescription cq-msm-lockable="./fontSizeDescription"
                                                fieldLabel="Description Font-Size (px)"
                                                jcr:primaryType="nt:unstructured"
                                                name="./fontSizeDescription"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"/>
                        </items>
                     </column>
                  </items>
               </header-properties>
               <basic-properties jcr:primaryType="nt:unstructured"
                                 jcr:title="Basic"
                                 sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <msgZero cq-msm-lockable="./msgZero"
                                    fieldLabel="Text Description"
                                    jcr:primaryType="nt:unstructured"
                                    name="./msgZero"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                              <fontFamilyButtonZero cq-msm-lockable="./fontFamilyButtonZero"
                                 fieldLabel="Description Font Family:"
                                 jcr:primaryType="nt:unstructured"
                                 name="./fontFamilyButtonZero"
                                 sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                 vertical="{Boolean}false">
                              <items jcr:primaryType="nt:unstructured">
                                 <Inter checked="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        name="fontFamilyButtonZero"
                                        text="Inter"
                                        value="Inter"/>
                                 <Arial checked="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        name="fontFamilyButtonZero"
                                        text="Arial"
                                        value="Arial"/>
                                 <Nunito checked="{Boolean}true"
                                         jcr:primaryType="nt:unstructured"
                                         name="fontFamilyButtonZero"
                                         text="Nunito"
                                         value="Nunito"/>
                              </items>
                           </fontFamilyButtonZero>
                           <colorButtonZero cq-msm-lockable="./colorButtonZero"
                                            fieldLabel="Button text color"
                                            jcr:primaryType="nt:unstructured"
                                            name="./colorButtonZero"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                           <backgroundButtonZero cq-msm-lockable="./backgroundButtonZero"
                                                 fieldLabel="Button background color"
                                                 jcr:primaryType="nt:unstructured"
                                                 name="./backgroundButtonZero"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                        </items>
                     </column>
                  </items>
               </basic-properties>
               <social-properties jcr:primaryType="nt:unstructured"
                                  jcr:title="Social"
                                  sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                     </column>
                  </items>
               </social-properties>
               <certificates-properties jcr:primaryType="nt:unstructured"
                                        jcr:title="Certificates"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                     </column>
                  </items>
               </certificates-properties>
               <success-properties jcr:primaryType="nt:unstructured"
                                   jcr:title="Success"
                                   sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                     </column>
                  </items>
               </success-properties>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
